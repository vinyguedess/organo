{
    "name": "vinyguedess/organogramer",
    "description": "Teste - Criação de API para definir o organograma de uma empresa",
    "version": "1.0.0",
    "keywords": ["organograma", "api", "teste"],
    
    "autoload": {
        "psr-4": {
            "Organo\\": "src/app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Organo\\Test\\": "test/"
        }
    },
    
    "require": {
        "silex/silex": "^2.2",
        "doctrine/dbal": "^2.6"
    },
    "require-dev": {
        "heroku/heroku-buildpack-php": "^124.0",
        "phpunit/phpunit": "^6.3",
        "symfony/browser-kit": "^3.3",
        "symfony/css-selector": "^3.3"
    },

    "scripts": {
        "test": "./vendor/phpunit/phpunit/phpunit  -c phpunit.xml --coverage-html coverage"
    }
}
